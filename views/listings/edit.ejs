<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h2>Edit your listing!</h2>
    <form method="post" action="/listings/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-3">
            <lable for="title" class="form-label">Title:</lable>
            <input type="text" name="listing[title]" value="<%=listing.title%>" class="form-control" required>
            <div class="invalid-feedback">Title shoud be valid!</div>
        </div>

        <div class="mb-3">
            <lable for="title" class="form-label">Description:</lable>
            <textarea type="text" name="listing[description]" class="form-control" required><%=listing.description%></textarea>
            <div class="invalid-feedback">Description shoud be valid!</div>
        </div>

        <div class="mb-3">
            Original Image: <br>
            <img src="<%= originalImageUrl %>">
        </div>

        <div class="mb-3">
            <lable for="title" class="form-label">Upload new image:</lable>
            <input type="file" name="listing[image]"  class="form-control" >
        </div>

        <div class="row">
            <div class="mb-3 col-md-4">
                <lable for="title" class="form-label">Price:</lable>
                <input type="text" name="listing[price]" value="<%=listing.price%>" class="form-control" required>
                <div class="invalid-feedback">Price shoud be valid!</div>
            </div>

            <div class="mb-3 col-md-8">
                <lable for="title" class="form-label">Country:</lable>
                <input type="text" name="listing[country]" value="<%=listing.country%>" class="form-control" required>
                <div class="invalid-feedback">Country shoud be valid!</div>
            </div>
        </div>
       
        <div class="mb-3">
            <lable for="title" class="form-label">Location:</lable>
            <input type="text" name="listing[location]" value="<%=listing.location%>"class="form-control" required>
            <div class="invalid-feedback">Location shoud be valid!</div>
        </div>

        <button class="btn btn-dark mt-1">EDIT</button>
    </form>
    </div>
    </div>
    <br>
